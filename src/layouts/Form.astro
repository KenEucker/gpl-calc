---
import Base from './Base.astro'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Base showBack={true} title={title}>
  <main>
    <slot />
  </main>
</Base>

<style>
  main {
    margin-top: 45px;
  }

  @media (min-width: 575px) {

    main {
      margin-top: unset;
    }
  }
</style>